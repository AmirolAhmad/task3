<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @list.name %>
</p>

<% if @list.is_deleted? %>
<p>
  <strong>Deleted at:</strong>
  <%= @list.deleted_at %>
</p>

<p>
  <strong>Deleted:</strong>
  <%= @list.deleted %>
</p>
<% end %>

<h1>List Items</h1>

<% if @list_items.any? %>
  <table>
    <thead>
      <tr>
        <th>Name</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @list_items.each do |list| %>
        <tr>
          <td><%= list.name %></td>
          <td><%= link_to 'Show', list_list_item_path(list_id: @list, id: list) %></td>
          <td><%= link_to 'Edit', edit_list_list_item_path(list_id: @list, id: list) %></td>
          <td><%= link_to 'Delete', list_list_item_path(list_id: @list, id: list), method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  N/A
<% end %>

<br><br><br>

<% if !@list.is_deleted? %>
  <%= link_to "Add New Item", new_list_list_item_path(@list) %> |
<% end %>
<%= link_to 'Edit', edit_list_path(@list) %> |
<%= link_to 'Back', lists_path %>
